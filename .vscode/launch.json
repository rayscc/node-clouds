{
    "version": "2,0.0", 
    "configurations": [ 
        {
            "preLaunchTask": "Build", //tasks.json的label相对应
            "name": "(gdb) Launch",
            "type": "cppdbg", 
            "request": "launch",
            "targetArchitecture": "x64",
            "program": "${workspaceRoot}/bin/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "internalConsoleOptions": "openOnSessionStart",
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/PKGs/mingw64/bin/gdb.exe", //调试器路径,在Linux环境下需要注释掉这一行
            "setupCommands": [ 
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}